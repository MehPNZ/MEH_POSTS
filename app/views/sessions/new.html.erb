<% main_menu %>
<%= render 'shared/errors', object: @sessions %>

<h2 class="mb-3 mt-3">Log In</h2>

<%= form_with url: sessions_path do |f|%>
<div class="mb-3 row">  
  <div class='col-sm-1 col-form-label text-end'>
    <%= f.label :email %>
  </div>
  <div class='col-sm-10'>
    <%= f.email_field :email, placeholder: 'E-mail',  class: 'form-control'%>
  </div>
</div>

<div class="mb-3 row">
  <div class='col-sm-1 col-form-label text-end'>
    <%= f.label :password %>
  </div>
  <div class='col-sm-10'>
    <%= f.password_field :password, class: 'form-control'%>
  </div>
</div>

  <%= f.submit "Log In", class: 'btn btn-primary'  %>
  <%= link_to "Cancel", posts_path, class: 'btn btn-danger'  %>
<% end %>